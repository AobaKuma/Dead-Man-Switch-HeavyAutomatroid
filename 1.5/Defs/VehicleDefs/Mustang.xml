<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="DMS_BaseVehicleBuild"><!-- 建築型態的載具，基本上與BuildingDef相同-->
		<defName>DMS_Mustang_ATV_Blueprint</defName>
		<label>Mustang ATV</label>
		<description>A lightweight autonomous combat platform that is used to coordinate infantry attacks. This type of fire control system that uses existing platform modifications and is controlled by algorithms is a common configuration of the first generation of automatroid.</description>
		<graphicData>
			<texPath>Things/Vehicles/Mustang/vehicle</texPath>
			<drawSize>3.5</drawSize>
		</graphicData>
		<size>(2,3)</size>
		<statBases> 		
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		<researchPrerequisites>
			<li>DMS_Hypothesis</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>	
		<costList>
			<EngineLight MayRequireAnyOf="aoba.motorization.engine,rimthunder.core">2</EngineLight>
			<Neurocomputer>1</Neurocomputer>
			<ComponentStamped>3</ComponentStamped>
			<ComponentIndustrial>5</ComponentIndustrial>
			<DMS_Ceramics>60</DMS_Ceramics>
			<Tungsteel>85</Tungsteel>
			<Steel>100</Steel>
			<Chemfuel>120</Chemfuel>
		</costList>
		<thingToSpawn>DMS_Mustang_ATV</thingToSpawn>	<!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
	</Vehicles.VehicleBuildDef>

	<Vehicles.VehicleDef ParentName="DMS_BaseVehicle">
		<defName>DMS_Mustang_ATV</defName>
		<label>Mustang ATV</label>
		<description>A lightweight autonomous combat platform that is used to coordinate infantry attacks. This type of fire control system that uses existing platform modifications and is controlled by algorithms is a common configuration of the first generation of automatroid</description>
		<buildDef>DMS_Mustang_ATV_Blueprint</buildDef>		
		<graphicData>
			<texPath>Things/Vehicles/Mustang/vehicle</texPath>
			<drawSize>3.5</drawSize>
		</graphicData>		
		<size>(2,3)</size>
		<fillPercent>0.7</fillPercent>	
		<vehicleCategory>Combat</vehicleCategory>
		<vehicleMovementPermissions>NoDriverNeeded</vehicleMovementPermissions>
		<statBases>
			<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<Flammability>0</Flammability>
			<MarketValue>2050</MarketValue>
		</statBases>		
		<vehicleStats>
			<Mass>750</Mass>
			<MoveSpeed>7</MoveSpeed>
			<CargoCapacity>200</CargoCapacity>
			<RepairRate>0.8</RepairRate>
		</vehicleStats>
		<soundOneShotsOnEvent Inherit = "false">
			<li>
				<key>PawnEntered</key>
				<value>DMS_VehicleEnter</value>
			</li>
			<li>
				<key>PawnExited</key>
				<value>DMS_VehicleEnter</value>
			</li>
			<li>
				<key>IgnitionOn</key>
				<value>DMS_WheeledVehicleStart</value>
			</li>
			<li>
				<key>IgnitionOff</key>
				<value>DMS_WheeledVehicleStop</value>
			</li>
		</soundOneShotsOnEvent>
		<soundSustainersOnEvent Inherit="false"> 
			<li>
				<start>IgnitionOn</start>
				<stop>IgnitionOff</stop>
				<value>DMS_Engine_WheeledVehicle</value>
			</li>
		</soundSustainersOnEvent>
		<race>
			<baseBodySize>2</baseBodySize>
		</race>	
		<properties>
			<customRoadCosts AssignDefaults = "0.25"/>
			<worldSpeedMultiplier>1</worldSpeedMultiplier>
			<offRoadMultiplier>2</offRoadMultiplier>
			<winterCostMultiplier>1.1</winterCostMultiplier>
			<restrictToFactions>
				<li>DMS_Army</li>
			</restrictToFactions>
			<manhunterTargetsVehicle>false</manhunterTargetsVehicle>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 2)</li>
			</vehicleJobLimitations>
		</properties>	
		<components>
			<!-- Internal mobile Part 內部驅動部件-->
			<li><!-- Engine 100-->
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<categories><li>MoveSpeed</li></categories>	
				<depth>Internal</depth>		
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>		
				<hitbox>
					<cells>
						<li>(0, 1)</li>
						<li>(0, 0)</li>
					</cells>
				</hitbox>						
			</li>
			<li><!-- LeftFrontSuspension 40-->
				<key>LeftFrontSuspension</key>
				<label>left front Suspension</label>
				<health>40</health>
				<depth>Internal</depth>			
				<hitbox>
					<cells>
						<li>(0, 1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightFrontSuspension 40-->
				<key>RightFrontSuspension</key>
				<label>right front suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(1, 1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- LeftRearSuspension 40-->
				<key>LeftRearSuspension</key>
				<label>left rear suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightRearSuspension 40-->
				<key>RightRearSuspension</key>
				<label>right rear suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(1, -1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- Gearbox 45-->
				<key>Gearbox</key>
				<label>gear box</label>
				<health>45</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(0, 1)</li>
						<li>(1, 1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- FuelTank 40-->
				<key>FuelTank</key>
				<label>fuel tank</label>
				<health>40</health>
				<depth>Internal</depth>			
				<reactors>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>			
				<hitbox>
					<cells>
						<li>(0, 0)</li>
						<li>(1, 0)</li>
					</cells>
				</hitbox>
			</li>
		<!-- External mobile Part 外部驅動部件-->
			<li><!-- LeftFrontWheel 30-->
				<key>LeftFrontWheel</key>
				<label>left front Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>			
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(0, 1)</li>
					</cells>
				</hitbox>			
			</li>
			<li><!-- RightFrontWheel 30-->
				<key>RightFrontWheel</key>
				<label>right front Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(1, 1)</li>
					</cells>
				</hitbox>
			</li>
			<li><!-- LeftRearWheel	30-->
				<key>LeftRearWheel</key>
				<label>left rear wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li><!-- RightRearWheel 30-->
				<key>RightRearWheel</key>
				<label>right rear Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(1, -1)</li>
					</cells>
				</hitbox>
			</li>
		<!-- Internal Shell Part 內裝部件-->
			<li><!-- Dashboard 30-->
				<key>Dashboard</key>
				<label>dashboard</label>
				<health>30</health>
				<depth>Internal</depth>
			</li>
			<li><!-- SteeringWheel 20-->
				<key>SteeringWheel</key>
				<label>steering wheel</label>
				<health>20</health>
				<depth>Internal</depth>
			</li>
			<!-- External Platings 外部防禦部件 -->
			<li><!-- FrontArmorPlating 200-->
				<key>FrontArmorPlating</key>
				<label>front armor Plating</label>
				<health>70</health>
				<depth>External</depth>
				<hitWeight>8</hitWeight>	
				<armor>
					<ArmorRating_Blunt>1.10</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
				</armor>		
				<hitbox><side>Front</side></hitbox>
			</li>
			<li><!-- LeftArmorPlating 180-->
				<key>LeftArmorPlating</key>
				<label>left armor plating</label>
				<health>60</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>		
				<armor>
					<ArmorRating_Blunt>0.8</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Left</side></hitbox>
			</li>
			<li><!-- RightArmorPlating 180-->
				<key>RightArmorPlating</key>
				<label>right armor plating</label>
				<health>60</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>	
				<armor>
					<ArmorRating_Blunt>0.8</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Right</side></hitbox>
			</li>
			<li><!-- RoofArmorPlating 150 -->
				<key>RoofArmorPlating</key>
				<label>roof armor plating</label>
				<health>60</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<armor>
					<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
				</armor>
			</li>
			<li><!-- BackArmorPlating 150-->
				<key>BackArmorPlating</key>
				<label>rear armor plating</label>
				<health>50</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<hitbox>
					<side>Back</side>
				</hitbox>
			</li>
		</components>
		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>17</fuelConsumptionRate>
				<fuelConsumptionWorldMultiplier>0.5</fuelConsumptionWorldMultiplier>
				<fuelCapacity>85</fuelCapacity>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">	<!-- 砲塔 -->
				<turrets>
					<li>
						<turretDef>DMS_turret_Kord</turretDef>					
						<renderProperties>
							<north>(0, 0.2)</north>
							<south>(0, 0.275)</south>
							<east>(-0.2, 0.2)</east>
							<west>(0.2, 0.2)</west>
						</renderProperties>				
						<gizmoLabel>Main Turret</gizmoLabel>
						<aimPieOffset>(-0.1, 0)</aimPieOffset>	<!-- 預熱指示器的x,z偏移 -->
						<drawLayer>1</drawLayer>						
						<key>mainTurret</key>
					</li>
				</turrets>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>